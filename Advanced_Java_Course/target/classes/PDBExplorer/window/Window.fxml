<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.CheckMenuItem?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.text.TextFlow?>

<BorderPane prefHeight="600.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="PDBExplorer.window.WindowController">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
                  <MenuItem fx:id="openMenuItem" mnemonicParsing="false" text="Open" />
                  <MenuItem fx:id="saveMenuItem" mnemonicParsing="false" text="Save" />
              <MenuItem fx:id="closeMenuItem" mnemonicParsing="false" text="Close" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Edit">
            <items>
              <MenuItem fx:id="undoMenuItem" mnemonicParsing="false" text="Undo" />
                  <MenuItem fx:id="redoMenuItem" mnemonicParsing="false" text="Redo" />
                  <MenuItem fx:id="copyMenuItem" mnemonicParsing="false" text="Copy" />
            </items>
          </Menu>
            <Menu mnemonicParsing="false" text="View">
              <items>
                <MenuItem fx:id="fullscreenMenuItem" mnemonicParsing="false" text="Full Screen" />
                  <CheckMenuItem fx:id="darkmodeMenuItem" mnemonicParsing="false" text="Dark Mode" />
              </items>
            </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem fx:id="aboutMenuItem" mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
   <center>
      <TabPane fx:id="tabPane" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
        <tabs>
            <Tab text="Pdb Overview">
              <content>
                  <BorderPane>
                     <top>
                        <ToolBar prefHeight="40.0" prefWidth="610.0" BorderPane.alignment="CENTER">
                           <items>
                              <TextField fx:id="searchField" promptText="Search" />
                              <ProgressBar fx:id="progressBar" prefWidth="200.0" progress="0.0" />
                              <Button fx:id="cancelButton" mnemonicParsing="false" text="Cancel" />
                           </items>
                        </ToolBar>
                     </top>
                     <left>
                        <ListView fx:id="pdbList" BorderPane.alignment="CENTER" />
                     </left>
                     <center>
                        <TextArea fx:id="pdbTextArea" editable="false" BorderPane.alignment="CENTER" />
                     </center>
                  </BorderPane>
              </content>
            </Tab>
          <Tab text="Structure">
            <content>
                  <BorderPane prefHeight="200.0" prefWidth="200.0">
                     <top>
                        <ToolBar BorderPane.alignment="CENTER">
                          <items>
                            <Button fx:id="explodeButton" mnemonicParsing="false" text="Explode" />
                              <CheckBox fx:id="ballsBox" mnemonicParsing="false" text="Balls" />
                              <Slider fx:id="ballsSlider" prefHeight="14.0" prefWidth="76.0" />
                              <CheckBox fx:id="sticksBox" mnemonicParsing="false" text="Sticks" />
                              <Slider fx:id="sticksSlider" prefHeight="14.0" prefWidth="75.0" />
                              <ComboBox fx:id="comboBox" prefWidth="150.0" promptText="Color Schemes" />
                              <CheckBox fx:id="ribbonCheckBox" mnemonicParsing="false" text="Ribbons" />
                              <MenuButton fx:id="polymerMenuButton" mnemonicParsing="false" text="Polymers" />
                              <ComboBox fx:id="conformationComboBox" prefWidth="150.0" promptText="Conformations" />
                          </items>
                        </ToolBar>
                     </top>
                     <center>
                        <Pane fx:id="structurePane" BorderPane.alignment="CENTER" />
                     </center>
                     <bottom>
                        <ScrollPane fx:id="textScrollPane" BorderPane.alignment="CENTER">
                           <content>
                              <TextFlow fx:id="textFlowPane" prefHeight="50.0" />
                           </content>
                        </ScrollPane>
                     </bottom>
                  </BorderPane>
            </content>
          </Tab>
          <Tab fx:id="chartTab" text="Charts">
            <content>
                  <BorderPane>
                     <center>
                        <ScrollPane BorderPane.alignment="CENTER">
                           <content>
                              <TilePane fx:id="chartPaneContent" />
                           </content>
                        </ScrollPane>
                     </center>
                  </BorderPane>
            </content>
          </Tab>
        </tabs>
      </TabPane>
   </center>
</BorderPane>
